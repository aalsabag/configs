" line numvers
set nu

" tabs to spaces. 2 spaces because I'm not a heathen
set expandtab
set tabstop=2
set shiftwidth=2

" show current position
set ruler

" ignore case when searching
set ignorecase

"highlight search results
set hlsearch

" live search
set incsearch

" show matching brackets
set showmatch
set mat=2

" no sounds
set noerrorbells novisualbell tm=500 t_vb=

set ai "Auto indent
set si "Smart indent
set wrap "Wrap lines

" remap escape to kj
inoremap kj <Esc>

" turn hybrid line numbers on
set number relativenumber
set nu rnu
